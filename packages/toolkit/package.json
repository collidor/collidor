{
    "name": "@collidor/toolkit",
    "version": "0.0.4",
    "description": "An umbrella package for collidor libraries.",
    "repository": {
        "type": "git",
        "url": "git@github.com:collidor/collidor.git",
        "directory": "packages/collidor"
    },
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "main": "dist/main.cjs",
    "module": "dist/main.js",
    "types": "dist/main.d.ts",
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "deno test",
        "lint": "deno lint",
        "test:coverage": "deno test --coverage && deno coverage --lcov --output=./coverage/lcov.info && deno coverage --html",
        "publish:jsr": "deno run --allow-all ./publishJsr.ts",
        "sync:jsr": "deno run --allow-read --allow-write ./sync.ts"
    },
    "keywords": [
        "command",
        "command bus",
        "command handler"
    ],
    "author": "Alykam Burdzaki <alykam@gmail.com> (https://alykam.com)",
    "license": "MIT",
    "devDependencies": {
        "tsup": "8.5.0",
        "typescript": "5.8.3"
    },
    "dependencies": {
        "@collidor/event": "workspace:*",
        "@collidor/command": "workspace:*",
        "@collidor/injector": "workspace:*",
        "@collidor/schema-command": "workspace:*"
    }
}