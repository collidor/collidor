{
    "name": "@collidor/command",
    "version": "5.3.2",
    "description": "A small library to create, register and execute commands.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/collidor/collidor.git"
    },
    "type": "module",
    "main": "dist/main.cjs",
    "module": "dist/main.js",
    "types": "dist/main.d.ts",
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "deno test",
        "lint": "deno lint",
        "test:coverage": "deno test --coverage && deno coverage --lcov --output=./coverage/lcov.info && deno coverage --html",
        "publish:npm": "NPM_CONFIG_PROVENANCE=true pnpm publish --access public",
        "publish:jsr": "npx jsr publish",
        "publish-package": "npm ci && npm run publish:npm && npm run publish:jsr"
    },
    "keywords": [
        "command",
        "command bus",
        "command handler"
    ],
    "author": "Alykam Burdzaki <alykam@gmail.com> (https://alykam.com)",
    "license": "MIT",
    "devDependencies": {
        "@collidor/event": "workspace:*",
        "tsup": "8.5.0",
        "typescript": "5.8.3"
    },
    "peerDependencies": {
        "@collidor/event": "^4.2.0"
    }
}