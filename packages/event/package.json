{
    "name": "@collidor/event",
    "version": "4.2.8",
    "publishConfig": {
        "access": "public"
    },
    "description": "A small library to create, register and listen to events.",
    "repository": {
        "type": "git",
        "url": "git@github.com:collidor/collidor.git",
        "directory": "packages/event"
    },
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/main.d.ts",
            "import": "./dist/main.js",
            "require": "./dist/main.cjs"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "deno test",
        "lint": "deno lint",
        "test:coverage": "deno test --coverage && deno coverage --lcov --output=./coverage/lcov.info && deno coverage --html",
        "publish:jsr": "deno run --allow-all ./publishJsr.ts",
        "sync:jsr": "deno run --allow-read --allow-write ./sync.ts"
    },
    "keywords": [
        "event",
        "event bus",
        "event handler",
        "event emitter",
        "event listener",
        "event publisher"
    ],
    "author": "Alykam Burdzaki <alykam@gmail.com> (https://alykam.com)",
    "license": "MIT",
    "devDependencies": {
        "tsup": "^8.3.6",
        "typescript": "^5.7.3"
    }
}