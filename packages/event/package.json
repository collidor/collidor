{
    "name": "@collidor/event",
    "version": "4.2.1",
    "description": "A small library to create, register and listen to events.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/collidor/collidor.git"
    },
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/main.d.ts",
            "import": "./dist/main.js",
            "require": "./dist/main.cjs"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "deno test",
        "lint": "deno lint",
        "test:coverage": "deno test --coverage && deno coverage --lcov --output=./coverage/lcov.info && deno coverage --html",
        "publish:npm": "npm publish --provenance --access public",
        "publish:jsr": "npx jsr publish",
        "publish-package": "npm ci && npm run publish:npm && npm run publish:jsr"
    },
    "keywords": [
        "event",
        "event bus",
        "event handler",
        "event emitter",
        "event listener",
        "event publisher"
    ],
    "author": "Alykam Burdzaki <alykam@gmail.com> (https://alykam.com)",
    "license": "MIT",
    "devDependencies": {
        "tsup": "^8.3.6",
        "typescript": "^5.7.3"
    }
}