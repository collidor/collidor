{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "test",
                "lint",
                "^build"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "test": {
            "dependsOn": [
                "lint",
                "^test"
            ]
        },
        "test:coverage": {
            "dependsOn": [
                "lint",
                "^test:coverage"
            ],
            "outputs": [
                "cov_profile/**",
                "coverage/**"
            ]
        },
        "publish": {
            "dependsOn": [
                "build",
                "test:coverage"
            ],
            "outputs": [
                "dist/**",
                "coverage/**"
            ],
            "env": [
                "NPM_TOKEN"
            ]
        }
    }
}